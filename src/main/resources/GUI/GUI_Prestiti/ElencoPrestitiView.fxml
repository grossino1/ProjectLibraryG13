<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.GUI_Prestito.GestionePrestitiViewController">

   <left>
      <VBox prefHeight="600.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="59.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../logo_standard.png" />
                     </image>
                  </ImageView>
                  <Label text=" LIBRERIA G13" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <Button maxWidth="1.7976931348623157E308" onAction="#handleCatalogoLibri" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="ðŸ“š  Catalogo Libri">
               <padding>
                  <Insets bottom="15.0" left="30.0" top="15.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Button maxWidth="1.7976931348623157E308" onAction="#handleGestioneUtenti" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="ðŸ‘¥  Gestione Utenti">
               <padding>
                  <Insets bottom="15.0" left="30.0" top="15.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="ðŸ“‹  Prestiti">
               <padding>
                  <Insets bottom="15.0" left="30.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>

   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label text="Gestione Prestiti" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <HBox HBox.hgrow="ALWAYS" /> 
                  <Label text="Benvenuto, Bibliotecario" textFill="#7f8c8d">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Button fx:id="handleLogout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="640.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="handleNuovoPrestito" onAction="#handleAggiungiPrestito" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="+ Nuovo Prestito" />
                  
                  <HBox HBox.hgrow="ALWAYS" />
                  
                  <Label text="Ordina:" textFill="#7f8c8d" />
                  
                  <Button fx:id="handleSortReturnData" onAction="#handleSortReturnDate"  layoutX="20.0" layoutY="20.0" style="-fx-background-color: #ecf0f1; -fx-text-fill: black;" text="Per Data di Restituzione" />
                  <Button fx:id="handleSortMostRecent" onAction="#handleSortMostRecent"  layoutX="20.0" layoutY="20.0" style="-fx-background-color: #ecf0f1; -fx-text-fill: black;" text="Per Data di Registrazione" />
                  <!--<Button fx:id="handleSortLatestRecent" layoutX="20.0" layoutY="20.0" prefHeight="25.0" prefWidth="93.0" style="-fx-background-color: #ecf0f1; -fx-text-fill: #black;" text="Meno Recente" />
                  -->
                  <TextField fx:id="handleCercaPrestito" promptText="Cerca per titolo..." onAction="#handleCercaPrestito" style="-fx-background-color: #ecf0f1; -fx-text-fill: black;" />
                  <Button fx:id="handleInvio" onAction="#handleCercaPrestito" layoutX="20.0" layoutY="20.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Invio" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="prestitiPresentiLabel" text="Prestiti presenti:" textFill="#7f8c8d" />
                   <HBox HBox.hgrow="ALWAYS" />
                  <Label text="Azioni Prestito Selezionato:" textFill="#7f8c8d" />
                  
                  <Button fx:id="btnModifica" onAction="#handleModifyPrestito" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Modifica" />
                  <Button fx:id="btnElimina" onAction="#handleRemovePrestito" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Elimina" />
               </children>
            </HBox>
            <TableView fx:id="tabellaPrestiti" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colLibro" editable="false" prefWidth="200.0" text="Libro (ISBN)" />
                <TableColumn fx:id="colUtente" editable="false" prefWidth="150.0" text="Utente (Matricola)" />
                <TableColumn fx:id="colDataRegistrazione" editable="false" prefWidth="120.0" text="Data Registrazione" />
                <TableColumn fx:id="colDataScadenza" editable="false" prefWidth="120.0" text="Data Scadenza" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

         </children>
      </VBox>
   </center>
</BorderPane>